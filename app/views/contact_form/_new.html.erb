<!-- Contact Form -->
<section id="contact" class="py-5">
    <div class="container">
        <h2 class="text-center mb-4 text-black">Get in Touch</h2>
        <div class="col-md-8 offset-md-2">
            <%= form_with url: '/contact', method: 'post', local: true do |form| %>
                <div class="form-group mb-3">
                    <%= form.label :name, "Name" %>
                    <%= form.text_field :name, class: "form-control", placeholder: "Enter your name" %>
                </div>
                <div class="form-group mb-3">
                    <%= form.label :email, "Email address" %>
                    <%= form.email_field :email, class: "form-control", placeholder: "Enter your email" %>
                </div>
                <div class="form-group mb-3">
                    <%= form.label :message, "Message" %>
                    <%= form.text_area :message, class: "form-control", rows: 3, placeholder: "Your message" %>
                </div>
                <%= form.submit "Submit", class: "btn btn-danger" %>
            <% end %>
        </div>
    </div>
</section>