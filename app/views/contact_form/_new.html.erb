<!-- Contact Form -->
<section id="contact">
    <div class="container">
        <div>           
            <%= form_with url: 'https://formspree.io/f/xldezajb', method: 'post', local: true do |f| %>
            <div class="form-group mb-3">
                <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
            </div>
            <div class="form-group mb-3">
                <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
            </div>
            <div class="form-group mb-3">
                <%= f.select :topic, options_for_select(["Joining Mama Tech", "Mentorship Inquiry", "I need Help with a Project", "Please share more information", "General Inquiry", "Seeking Partnership Opportunities"]), { prompt: "How can we help - Select a Topic" }, { class: "form-select" } %>
            </div>
            <div class="form-group mb-3">
                <%= f.text_area :message, class: "form-control", rows: 3, placeholder: "Your message" %>
            </div>
            <%= f.submit "Submit", class: "btn btn-danger" %>
        <% end %>        
        </div>
        <h4 class="text-center mt-4">Follow Us</h4>
        <div class="contact-info" style="display: flex; justify-content: center; align-items: center; gap: 20px;">
            <a href="https://x.com/NaijeriaToweett" target="_blank">
                <i class="bi bi-twitter" style="color: #1DA1F2;"></i>
            </a>
            <a href="https://www.linkedin.com/company/mamatechkenya" target="_blank">
                <i class="bi bi-linkedin" style="color: #0A66C2;"></i>
            </a>
            <a href="https://www.facebook.com/mumlovestech/" target="_blank">
                <i class="bi bi-facebook" style="color: #1877F2;"></i>
            </a>
            <a href="https://www.youtube.com/channel/UCTcwSBt9XCt27ZI8-ROKXHQ" target="_blank">
                <i class="bi bi-youtube" style="color: #FF0000;"></i>
            </a>
        </div> 
    </div>
</section>