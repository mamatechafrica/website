<!-- Contact Form -->
<section id="contact" class="py-5">
    <div class="container">
        <h2 class="text-center mb-4 text-black">Get in Touch
            <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>">
                <%= value %>
            </div>
            <% end %>
        </h2>
        <div class="col-md-8 offset-md-2">
            <%= form_with url: '/contact', method: 'post', local: true do |f| %>
            <div class="form-group mb-3">
                <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
            </div>
            <div class="form-group mb-3">
                <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
            </div>
            <div class="form-group mb-3">
                <%= f.select :topic, options_for_select(["Join Us", "Mentorship Inquiry", "Need Help with a Project", "Request More Information", "General Inquiry", "Partnership Opportunities"]), { prompt: "How can we help - Select a Topic" }, { class: "form-select" } %>
            </div>
            <div class="form-group mb-3">
                <%= f.text_area :message, class: "form-control", rows: 3, placeholder: "Your message" %>
            </div>
            <%= f.submit "Submit", class: "btn btn-danger" %>
        <% end %>        
        </div>
    </div>
</section>