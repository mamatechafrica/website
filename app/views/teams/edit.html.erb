<div class="py-5">
    <div class="container py-5">
        <h2 class="text-center mb-4">Edit Team Member</h2>
        <%= form_with(model: [@team, @team_member], local: true, html: { multipart: true }) do |form| %>
            <div class="form-group">
                <%= form.label :name %>
                <%= form.text_field :name, class: "form-control" %>
            </div>
        
            <div class="form-group">
                <%= form.label :role %>
                <%= form.text_field :role, class: "form-control" %>
            </div>
        
            <div class="form-group">
                <%= form.label :bio %>
                <%= form.text_area :bio, class: "form-control" %>
            </div>
        
            <div class="form-group">
                <%= form.label :photo %>
                <%= form.file_field :photo, class: "form-control-file" %>
            </div>
        
            <div class="form-group">
                <%= form.label :social_links, "Social Media Links" %>
                <%= form.text_field :social_links, value: @team_member.social_links.to_json, class: "form-control", placeholder: "e.g., { linkedin: 'https://linkedin.com/in/username', twitter: 'https://twitter.com/username' }" %>
            </div>
        
            <div class="form-group">
                <%= form.submit "Update", class: "btn btn-primary" %>
            </div>
        <% end %>
    </div>
</div>